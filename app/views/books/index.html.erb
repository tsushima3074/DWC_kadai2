<main class="books_main">
  <div class="books_index_div">
    <h1>Books</h1>
    <table>
      <tr>
        <th>Title</th>
        <th>Body</th>
      </tr>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show", book_path(book) %></td>
          <td><%= link_to "Edit", edit_book_path(book) %></td>
          <td><%= link_to "Destroy", book_path(book), method: :delete %></td>
        </tr>
      <% end %>
    </table>
  </div>
  <div class="books_new_div">
    <h2>New book</h2>
    <% flash.each do |type, message| %>
      <p class="notice notice-<%= type %>"><%= message %></p>
    <% end %>
    <% if @book.errors.any? %>
    <%= @book.errors.count %>件のエラーが発生しました
    <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
    <%= form_with model:@book, local:true do |f| %>
      <div class="filed">
        <label for="book_title">タイトル</label>
        <%= f.text_field :title %>
      </div>
      <div class="filed">
        <label for="book_body">本文</label>
        <%= f.text_area :body %>
      </div>
      <div class="filed">
        <%= f.submit 'Create Book' %>
      </div>
    <% end %>
  </div>
</main>